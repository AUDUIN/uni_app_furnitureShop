.main {
  background-color: #091E42;
  text-align: center;
  height: 100vh;
}
.main .title {
    font-size: 48rpx;
    color: #FAFBFC;
    height: 90rpx;
    line-height: 90rpx;
}
.main .price {
    font-size: 34rpx;
    color: #A5ADBA;
    padding-bottom: 72rpx;
}
.main .card {
    background-color: #57D9A3;
    border-radius: 32px;
    padding: 82rpx;
    width: 500rpx;
    margin: auto;
}
.main .card image {
      width: 266rpx;
      height: 392rpx;
}
.main .info {
    padding-left: 50rpx;
    padding-top: 50rpx;
    padding-bottom: 50rpx;
}
.main .info .title {
      text-align: left;
      color: #57D9A3;
      font-size: 40rpx;
}
.main .info .name {
      color: #FFFFFF;
      text-align: left;
      font-size: 40rpx;
}
.main .info .name text {
        padding-left: 10rpx;
        padding-right: 60rpx;
        color: #C8C7CC;
        font-size: 32rpx;
        letter-spacing: 5rpx;
}
.main .btn {
    background-color: #2684FF;
    font-size: 34rpx;
    border-radius: 48rpx;
    width: 396rpx;
    height: 96rpx;
    margin: auto;
    line-height: 96rpx;
    color: #DEEBFF;
